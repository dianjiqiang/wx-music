<!--components/nav-bar/nav-bar.wxml-->
<view class="status" style="height: {{statusHeight}}px;"></view>
<view class="nav">
    <view class="left" bindtap="handleReturnClick">
      <view class="slot">
        <slot name="left"></slot>
      </view>
      <view class="default">
        <van-icon name="arrow-left" class="icon"/>
      </view>
    </view>
    <view class="center">
      <view class="slot">
        <slot name="center"></slot>
      </view>
      <view class="default">
        {{centerText}}
      </view>
    </view>
    <view class="right">
      {{rightText}}
    </view>
  </view>
