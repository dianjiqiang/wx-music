/* pages/music-player/index.wxss */
.bg-image, .bg-cover{
  z-index: -2;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.bg-cover{
  z-index: -1;
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(20px);
}
.tabs{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #aaa;
}
.active{
  color: #fff;
}
.division{
  padding: 0 2px;
  font-size: 14px;
}
.music{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  font-size: 14px;
  color: #fff;
}

.music .album{
  flex: 1;
}
.music .album .image{
  width: 100%;
  border-radius: 20rpx;
}
.music .info .name {
  font-size: 24px;
  font-weight: 700;
}
.music .info .singer{
  margin-top: 5rpx;
}
.music .lyric{
  text-align: center;
  margin: 12rpx 0;
  height: 40rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.music .slider{
  margin: 16rpx 18rpx 10rpx 18rpx;
}

.music .proress .time{
  display: flex;
  justify-content: space-between;
}
.music .control{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.music .control .btn{
  width: 30px;
  height: 30px;
} 
.music .control .btn.mode{
  width: 40px;
  height: 40px;
}
.music .control .btn.play{
  width: 50px;
  height: 50px;
}
.lyric-list{
  color: #fff;
  text-align: center;
  font-size: 14px;
  height: 100%;
}
.lyric-list ::-webkit-scrollbar{
  display: none;
}
.lyric-list .item{
  height: 35px;
  line-height: 17.5px;
}
.activeLrc{
  font-size: 18px;
  color: #0f0;
}
